{
  "name": "codebundle",
  "version": "1.0.0",
  "description": "CodeBundle",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development concurrently \"webpack serve --mode development --hot\" \"wait-on http://localhost:3000 && electron .\"",
    "kill-electron": "taskkill /F /IM electron.exe /T >nul 2>nul || exit 0",
    "kill-app": "taskkill /F /IM CodeBundle.exe /T >nul 2>nul || exit 0",
    "kill-process": "npx kill-port 3000",
    "clean": "npm run kill-electron && npm run kill-app && rimraf dist && rimraf build",
    "prebuild": "npm run kill-process && npm run clean",
    "build": "webpack --config webpack.config.js",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:all": "npm run build && electron-builder -mwl"
  },
  "build": {
    "appId": "com.codebundle.app",
    "productName": "CodeBundle",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "src/main/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico",
      "signingHashAlgorithms": null,
      "sign": null,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lisniuse/CodeBundle.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lisniuse/CodeBundle/issues"
  },
  "homepage": "https://github.com/lisniuse/CodeBundle#readme",
  "dependencies": {
    "@arco-design/web-react": "^2.65.0",
    "@electron/remote": "^2.1.2",
    "electron-store": "^10.0.1",
    "i18next": "^24.2.2",
    "parse-gitignore": "^2.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "babel-loader": "^10.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "del-cli": "^6.0.0",
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8",
    "electron-reload": "^2.0.0-alpha.1",
    "html-webpack-plugin": "^5.6.3",
    "path-browserify": "^1.0.1",
    "rimraf": "^6.0.1",
    "style-loader": "^4.0.0",
    "wait-on": "^8.0.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  }
}
